doctype html
html(lang="ko")
    head
        title #{pageTitle} | JStodo 
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/") 메인화면
                    
                    if loggedIn
                        li
                            a(href="/videos/upload") 할 일 추가
                        li
                            a(href="/users/edit") 사용자 : #{loggedInUser.name}
                        li 
                            a(href="/users/logout") 로그 아웃 
                    else
                        li
                            a(href="/join")  회원가입
                        li
                            a(href="/login")  로그인                                               
                    
        main
            block content
    include partials/footer

    